<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SAGApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SAGApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SAGApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SAGApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splash_title">
        <item name="android:textSize">55dp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="first_onboard_screen">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="first_onboard_page_text">

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="Button">
        <item name="backgroundTint">@color/off_white</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="backgroundTint">@color/dark_green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>
</resources>