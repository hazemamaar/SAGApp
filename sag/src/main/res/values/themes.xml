<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SAGApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/off_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SAGApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SAGApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SAGApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splash_title">
        <item name="android:textSize">55sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="first_onboard_screen">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="first_onboard_page_text">

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="txt_style">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="backgroundTint">@color/dark_green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>


    <style name="login_title">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_28sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_sub_title">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="forget_password_tv">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="setup_ed_txt"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <item name="boxCornerRadiusBottomEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_7sdp</item>
        <item name="boxStrokeColor">@color/dark_green</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="helperTextTextColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="PrimaryColoredButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="forget_password_title">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sub_title">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="successful_operation_tv">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_TV">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="contact_us">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="settings_button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="backgroundTint">@color/btn_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

</resources>